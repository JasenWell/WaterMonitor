<resources>

    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="colorAccent">#ffE91E63</item>
    </style>

    <style name="Dialog" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/color_clarity</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!--  这个是加入的代码  上到下弹出 -->
    <style name="top_anim_style">
        <item name="android:windowEnterAnimation">@anim/push_top_to_bottom</item>
        <!-- 指定显示的动画xml -->
        <!--<item name="android:windowExitAnimation">@anim/pophidden_anim</item>-->
        <!-- 指定消失的动画xml -->
    </style>

    <!--  这个是加入的代码 -->
    <style name="bottom_anim_style">
        <item name="android:windowEnterAnimation">@anim/push_bottom_to_top</item>
        <!-- 指定显示的动画xml -->

        <!--<item name="android:windowExitAnimation">@anim/pophidden_anim</item>-->
        <!-- 指定消失的动画xml -->
    </style>


    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@drawable/dialog_load_bg</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="item_layout_padding_style">
        <item name="android:paddingLeft">@dimen/padding_1.5normal_size</item>
        <item name="android:paddingRight">@dimen/padding_1.5normal_size</item>
        <item name="android:paddingTop">@dimen/padding_normal_size</item>
        <item name="android:paddingBottom">@dimen/padding_normal_size</item>
    </style>

    <style name="btn_style">
        <item name="android:paddingLeft">@dimen/padding_normal_size</item>
        <item name="android:paddingRight">@dimen/padding_normal_size</item>
        <item name="android:paddingTop">@dimen/padding_0.5normal_size</item>
        <item name="android:paddingBottom">@dimen/padding_0.5normal_size</item>
    </style>

    <style name="text_padding_style">
        <item name="android:paddingLeft">@dimen/padding_1.5normal_size</item>
        <item name="android:paddingRight">@dimen/padding_1.5normal_size</item>
        <item name="android:paddingTop">@dimen/padding_normal_size</item>
        <item name="android:paddingBottom">@dimen/padding_normal_size</item>
    </style>

    <style name="text_padding_small_style">
        <item name="android:paddingLeft">@dimen/padding_1.5normal_size</item>
        <item name="android:paddingRight">@dimen/padding_1.5normal_size</item>
        <item name="android:paddingTop">@dimen/padding_0.5normal_size</item>
        <item name="android:paddingBottom">@dimen/padding_0.5normal_size</item>
    </style>

    <style name="title_style">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:textSize">@dimen/txt_normal_add2_size</item>
    </style>

    <style name="content_style">
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">@dimen/txt_normal_size</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
    </style>
</resources>
