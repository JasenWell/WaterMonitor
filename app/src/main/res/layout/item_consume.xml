<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout"
        android:layout_marginTop="@dimen/margin_0.5normal_size">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_no"
            android:layout_marginLeft="@dimen/margin_1.5normal_size"
            android:padding="@dimen/padding_0.8normal_size"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/txt_normal_size"/>
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:maxLines="1"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/item_number"
            android:layout_marginRight="@dimen/margin_0.5normal_size"
            android:padding="@dimen/padding_0.8normal_size"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/txt_normal_size"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/separaor_line_height"
        android:background="@color/separaor_line_color"/>
</LinearLayout>