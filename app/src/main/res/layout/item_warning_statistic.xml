<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layout"
        android:background="@drawable/shape_white_bg"
        android:layout_marginTop="@dimen/margin_0.5normal_size">
        <TextView
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:id="@+id/item_no"
            android:layout_marginLeft="@dimen/margin_0.5normal_size"
            android:padding="@dimen/padding_0.8normal_size"
            android:text=""
            android:textColor="@color/black"
            android:textSize="@dimen/txt_normal_size"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:maxLines="1"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_position"
                    android:layout_marginRight="@dimen/margin_0.5normal_size"
                    android:padding="@dimen/padding_0.8normal_size"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_normal_size"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_0.5normal_size"
                    android:id="@+id/item_warning_type"
                    android:padding="@dimen/padding_0.8normal_size"
                    android:text="紧急"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_normal_size"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/padding_0.8normal_size"
                android:paddingBottom="@dimen/padding_0.8normal_size"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:id="@+id/item_warning_time"
                    android:padding="@dimen/padding_0.8normal_size"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_normal_size"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_4normal_size"
                    android:maxLines="1"
                    android:id="@+id/item_warning_count"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_normal_size"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/item_status"
        android:layout_marginRight="@dimen/margin_normal_size"
        android:layout_gravity="right|center_vertical"
        android:src="@mipmap/warning_unfinish2"/>
</FrameLayout>